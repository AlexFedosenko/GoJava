<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="categoryDaoImplPsql" class="belskii.artem.kickstarter.dao.category.CategoryDaoImplPsql">
		<constructor-arg type="String" value="conf/database.conf"/>
	</bean>
	<bean id="projectDaoImplPsql" class="belskii.artem.kickstarter.dao.project.ProjectDaoImplPsql">
		<constructor-arg type="String" value="conf/database.conf"/>
	</bean>
	<bean id="quoteDaoImplPsql" class="belskii.artem.kickstarter.dao.quote.QuoteDaoImplPsql">
		<constructor-arg type="String" value="conf/database.conf"/>
	</bean>
	
	<bean name="helloBean" class="belskii.artem.kickstarter.servlet.Hello">
		<property name="hello" value="hello from spring"></property>
	</bean>	

	
</beans>